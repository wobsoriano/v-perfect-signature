{
  "name": "v-perfect-signature",
  "description": "Perfect pressure-sensitive signature drawing for Vue 2 and 3",
  "keywords": [
    "vue",
    "signature",
    "pad",
    "freehand"
  ],
  "license": "MIT",
  "version": "1.1.2",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build-fast": "tsup src/index.ts --format cjs,esm",
    "build": "pnpm run build-fast -- --dts-resolve",
    "clean": "rm -rf node_modules dist",
    "prepublishOnly": "pnpm run build",
    "test": "jest"
  },
  "dependencies": {
    "perfect-freehand": "^1.0.16",
    "vue-demi": "^0.12.1"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.4.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@vue/compiler-sfc": "^3.2.31",
    "@vue/test-utils": "2.0.0-rc.18",
    "canvas": "^2.8.0",
    "jest": "^27.0.6",
    "jest-canvas-mock": "^2.3.1",
    "ts-jest": "^27.0.4",
    "tslib": "^2.3.0",
    "tsup": "^5.11.13",
    "typescript": "^4.2.3",
    "vue": "^3.2.31"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/v-perfect-signature.git"
  },
  "homepage": "https://github.com/wobsoriano/v-perfect-signature#readme",
  "prettier": {
    "singleQuote": true,
    "semi": true
  }
}
